# Should you change your keyboard layout some time, delete
# this file and re-run i3-config-wizard(1).

set $super Mod4
set $alt Mod1

default_border pixel 1
default_floating_border pixel 1
# for_window [class=".*"] border pixel 1
# hide borders
# hide_edge_borders none
gaps inner 10
# smart_gaps on
# smart_gaps inverse_outer

# font pango:DejaVu Sans Mono 10
font pango:Yosemite San Francisco 10

# Volume control
 # bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
 # bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% 
 # bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
 # bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86AudioRaiseVolume exec --no-startup-id i3-volume up 5 -np -N dunstify
bindsym XF86AudioLowerVolume exec --no-startup-id i3-volume down 5 -np -N dunstify
bindsym XF86AudioMute exec --no-startup-id i3-volume mute -np -N dunstify
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
# brightness control
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 20 && dunstify -r 1 -u low "Brightness up"
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 20 && dunstify -r 1 -u low "Brightness down"

# kill focused window
bindsym $alt+shift+q kill
# start dmenu (a program launcher)
# bindsym $super+d exec --no-startup-id dmenu_run
# A more modern dmenu replacement is rofi:
# bindcode $super+40 exec "rofi -modi drun,run -show drun"
bindsym $super+d exec "rofi -show"

# change focus
bindsym $alt+h focus left
bindsym $alt+j focus down
bindsym $alt+k focus up
bindsym $alt+l focus right

# move focused window
bindsym $alt+Shift+h move left
bindsym $alt+Shift+j move down
bindsym $alt+Shift+k move up
bindsym $alt+Shift+l move right

# switch to workspace with urgent window automatically
for_window [urgent=latest] focus

# split in vertical
bindsym $alt+minus split v
# split in horizontal
bindsym $alt+v split h

# fullscreen mode
bindsym $alt+f fullscreen toggle

# change container layout
bindsym $alt+w layout tabbed
bindsym $alt+e layout toggle split

# toggle tiling / floating
bindsym $alt+Shift+space floating toggle

# change focus between floating windows
bindsym $alt+space focus mode_toggle

# floating window sizes
floating_minimum_size -1 x -1
floating_maximum_size 2560 x 1920

# switch to workspace
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
bindsym $alt+1 workspace number $ws1
bindsym $alt+2 workspace number $ws2
bindsym $alt+3 workspace number $ws3
bindsym $alt+4 workspace number $ws4
bindsym $alt+5 workspace number $ws5
workspace_auto_back_and_forth yes
bindsym $alt+bracketleft workspace next
bindsym $alt+bracketright workspace prev
bindsym $alt+Tab workspace back_and_forth
# bindsym $super+Tab fullscreen disable, focus left, fullscreen enable

# move focused container to workspace
bindsym $alt+Shift+1 move container to workspace number $ws1
bindsym $alt+Shift+2 move container to workspace number $ws2
bindsym $alt+Shift+3 move container to workspace number $ws3
bindsym $alt+Shift+4 move container to workspace number $ws4
bindsym $alt+Shift+5 move container to workspace number $ws5

# reload the configuration file
bindsym $alt+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $alt+Shift+r restart

# Set shutdown restart and locking features
bindsym $super+Escape mode "$mode_system"
set $mode_system (l)ock, screen_(o)ff, (e)xit, switch_(u)ser, (s)uspend, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym o exec xset dpms force off, mode "default"
    bindsym l exec i3lock_script, mode "default"
    bindsym e exec i3-msg exit, mode "default"
    bindsym u exec i3_logout, mode "default"
    bindsym s exec systemctl suspend, mode "default"
    bindsym r exec reboot, mode "default"
    bindsym Shift+s exec systemctl poweroff, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $super+Escape mode "default"
    bindsym BackSpace mode "default"
}

# resize window (you can also use the mouse for that)
bindsym $alt+r mode "resize"
mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym k resize grow height 10 px or 10 ppt
    bindsym j resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # back to normal
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $super+r mode "default"
    bindsym BackSpace mode "default"
}

bindsym $super+o mode "$mode_open"
set $mode_open (B)rave, (C)ode, (D)iscord
mode "$mode_open" {
    bindsym b exec --no-startup-id $BROWSER, mode "default"
    bindsym c exec --no-startup-id code, mode "default"
    bindsym d exec --no-startup-id discord, mode "default"

    # back to normal
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $super+o mode "default"
    bindsym BackSpace mode "default"
}

 # set primary gruvbox colorscheme colors
 set $bg #282828
 set $red #cc241d
 set $green #98971a
 set $yellow #d79921
 set $blue #458588
 set $purple #b16286
 set $aqua #689d68
 set $white #ebdbb2
 set $gray #a89984
 set $darkgray #1d2021

#start of window title bars & borders section
# green gruvbox
# class                 border|backgr|text|indicator|child_border
#client.focused          $green $green $darkgray $purple $darkgray
#client.focused_inactive $darkgray $darkgray $yellow $purple $darkgray
#client.unfocused        $darkgray $darkgray $yellow $purple $darkgray
#client.urgent           $red $red $white $red $red

# blue gruvbox
# class                 border|backgr|text|indicator|child_border
# client.focused          $blue $blue $darkgray $purple $darkgray
client.focused          $blue $blue $aqua $purple $yellow
client.focused_inactive $darkgray $darkgray $yellow $purple $darkgray
client.unfocused        $darkgray $darkgray $yellow $purple $darkgray
client.urgent           $red $red $white $red $red
#end of window title bars & borders section

#start of i3-bar section
bar {
    position bottom
    status_command i3blocks -c ~/.config/i3/i3blocks.conf

    colors {
        # bar background color
        background $bg
        # text color used for blocks that do not have a color specified.
        statusline $white
        # workspaces section            
        # border  backgr. text
        focused_workspace    $yellow $yellow $darkgray
        inactive_workspace   $darkgray $darkgray $white
        active_workspace     $darkgray $darkgray $white
        urgent_workspace     $purple $bg $white
        ## status_command i3status
    }
}

exec --no-startup-id /home/zijian/.scripts/i3_alternating_layouts.py
