set $super Mod4
set $alt Mod1

default_border pixel 1
default_floating_border pixel 1
# for_window [class=".*"] border pixel 1
# hide borders
# hide_edge_borders none
gaps inner 20
# smart_gaps on
# smart_gaps inverse_outer

# font pango:DejaVu Sans 10
font pango:Yosemite San Francisco 10

# kill focused window
bindsym $super+shift+q kill

# change focus
bindsym $super+h focus left
bindsym $super+j focus down
bindsym $super+k focus up
bindsym $super+l focus right

# move focused window
bindsym $super+$alt+h move left
bindsym $super+$alt+j move down
bindsym $super+$alt+k move up
bindsym $super+$alt+l move right

# switch to workspace with urgent window automatically
for_window [urgent=latest] focus

# split in vertical
bindsym $super+s split v
# split in horizontal
bindsym $super+v split h

# fullscreen mode
bindsym $super+f fullscreen toggle

# toggle split orientation
bindsym $super+e layout toggle split

# toggle tiling / floating
bindsym $super+Shift+slash floating toggle

# change focus between floating windows
bindsym $super+slash focus mode_toggle

# floating window sizes
floating_minimum_size -1 x -1
floating_maximum_size 2560 x 1920

# switch to workspace
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
bindsym $super+1 workspace number $ws1
bindsym $super+2 workspace number $ws2
bindsym $super+3 workspace number $ws3
bindsym $super+4 workspace number $ws4
bindsym $super+5 workspace number $ws5
workspace_auto_back_and_forth yes
bindsym $super+bracketleft workspace prev
bindsym $super+bracketright workspace next
bindsym $super+Tab workspace back_and_forth

# move focused container to workspace
bindsym $super+Shift+1 move container to workspace number $ws1
bindsym $super+Shift+2 move container to workspace number $ws2
bindsym $super+Shift+3 move container to workspace number $ws3
bindsym $super+Shift+4 move container to workspace number $ws4
bindsym $super+Shift+5 move container to workspace number $ws5

# reload the configuration file
bindsym $super+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $super+Shift+r restart

# set primary gruvbox colorscheme colors
	# black #282828
	# black_hard #1d2021
	set $bg #1d2021
	set $red #cc241d
	set $green #98971a
	set $yellow #d79921
	set $blue #458588
	set $purple #b16286
	set $aqua #689d68
	set $white #ebdbb2
	set $gray #a89984
	set $darkgray #1d2021

# blue gruvbox
# class                 border|backgr|text|indicator|child_border
# client.focused          $blue $blue $darkgray $purple $darkgray
client.focused          $blue $blue $aqua $purple $yellow
client.focused_inactive $darkgray $darkgray $yellow $darkgray $darkgray
client.unfocused        $darkgray $darkgray $yellow $darkgray $darkgray
client.urgent           $red $red $white $red $red
#end of window title bars & borders section

# i3-bar section
bar {
    position bottom
    status_command i3blocks -c ~/.config/i3/i3blocks.conf

    colors {
        # bar background color
        background $bg
        # text color used for blocks that do not have a color specified.
        statusline $white

        # workspaces section
        # border  backgr. text
        focused_workspace    $yellow $yellow $darkgray
        inactive_workspace   $bg $bg $white
        active_workspace     $bg $bg $white
        urgent_workspace     $purple $bg $white
    }
}

exec --no-startup-id ~/.scripts/i3_alternating_layouts.py
