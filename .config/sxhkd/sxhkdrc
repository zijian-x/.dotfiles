super + Return
    alacritty --working-directory $HOME

super + g
    alacritty -e ranger

# screenshot
super + s
    scrot '%Y-%m-%d_$wx$h.png' -e 'mv $f ~/Pictures/Screenshots; cropgui ~/Pictures/Screenshots/$f'
super + alt + s
    scrot '%Y-%m-%d_$wx$h.png' -u -e 'mv $f ~/Pictures/Screenshots; cropgui ~/Pictures/Screenshots/$f'

# volume control
super + {F10, F11}
    i3-volume {down, up} 5 -np -N dunstify
super + F12
    i3-volume mute -np -N dunstify
# brightness control
super + {F1, F2}
    xbacklight {-dec, -inc} 20 && dunstify -r 1 -u low {"Brightness down", "Brightness up"}

super + t ; {k, s, c}
    { keys\
    , schedule\
    , dunstify "$(date)" "$(cal)"\
    }
