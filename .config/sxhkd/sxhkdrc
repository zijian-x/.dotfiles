super + Return
    alacritty --working-directory $HOME

# controls 
super + {F10, F11}
	pactl set-sink-volume @DEFAULT_SINK@ {-5%,+5%}
super + F12
	pactl set-sink-mute @DEFAULT_SINK@ toggle
# brightness
super + {F1, F2}
    xbacklight {-dec, -inc} 10

# controls (tp)
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle
# brightness
XF86MonBrightnessUp
	xbacklight -inc 10
XF86MonBrightnessDown
	xbacklight -dec 10

super + Escape ; {apostrophe, s, S, u, r, o}
	{ pkill -10 sxhkd && notify-send -u low "sxhkd daemon reloaded"\
	, notify-send -u low "zzz..." && sleep 1 && systemctl suspend\
	, notify-send -u low "  " && sleep 1 && systemctl poweroff\
	, notify-send -u low "  " && sleep 1 && user-logout\
	, notify-send -u low "  " && sleep 1 && reboot\
	, notify-send -u low "  " && sleep 1 && xset dpms force off\
	}

# opening programs
super + apostrophe ; {b, c, d, f, q, r, s, x, k, m}
	{ $BROWSER\
	, codium\
	, discord\
	, alacritty -e nnn\
	, qbittorrent\
	, alacritty -e ranger\
	, slack\
	, source $XDG_CONFIG_HOME/X11/xprofile\
	, set-keyboard-layout\
	, mailspring\
	}

super + alt + apostrophe
	rofi -show

super + alt + k
	rofi-proc-kill

# screenshot
super + shift + s
    flameshot full -c -p ~/Pictures/screenshots && sleep 30 && pkill flameshot
super + alt + s
    flameshot gui -p ~/Pictures/screenshots && sleep 240 && pkill flameshot

## bspwm

# restart bspwm
super + shift + r
	bspc wm -r

# reload xrandr
super + alt + r
	xrandr-refresh

# close
super + shift + c
	bspc node -c

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,\~pseudo_tiled,\~floating,\~fullscreen}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# switch focus back and forth
super + 6
	bspc node older -f

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window.local

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# move a floating window
super + ctrl + {h,j,k,l}
	bspc node -v {-40 0,0 40,0 -40,40 0}

focus the next/previous window in the current desktop
super + {n,p}
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on
