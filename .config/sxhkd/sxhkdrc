super + Return
    alacritty --working-directory $HOME

super + alt + o
	rofi -show

super + g
    alacritty -e vifm

# screenshot
super + shift + s
    flameshot full -c -p ~/Pictures/Screenshots && sleep 30 && wait $(pgrep sleep) && pkill flameshot
super + alt + s
    flameshot gui -p ~/Pictures/Screenshots && sleep 240 && wait $(pgrep sleep) && pkill flameshot

