super + Return
    alacritty --working-directory $HOME

super + g
    alacritty -e ranger

# screenshot
super + shift + s
    flameshot full -c -p ~/Pictures/Screenshots && sleep 30 && wait $(pgrep sleep) && pkill flameshot
super + alt + s
    flameshot gui -p ~/Pictures/Screenshots && sleep 240 && wait $(pgrep sleep) && pkill flameshot

# volume control
super + {F10, F11}
    i3-volume {down, up} 5 -np -N dunstify
super + F12
    i3-volume mute -np -N dunstify
# brightness control
super + {F1, F2}
    xbacklight {-dec, -inc} 20 && dunstify -r 1 -u low {"Brightness down", "Brightness up"}

super + t ; {c, t}
    { dunstify "$(date)" "$(cal)"\
    , alacritty -e bpytop\
    }
