# program controls
super + shift + Return ; {b, d, q}
	{ $BROWSER\
	, discord\
	, qbittorrent\
	}

## alacritty
super + Return
	alacritty -e tmux
alt + z
	alcty-padding-toggle

## playerctl
super + ctrl + {space, n, p}
    { playerctl play-pause \
    , playerctl next \
    , playerctl previous \
    }

# controls
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle

## system
super + shift + Escape ; {K, s, S, U, R, o, X, c, W}
	{ pkill -10 sxhkd && notify-send -u low "sxhkd daemon reloaded"\
	, notify-send -u low "zzz..." && sleep 0.5 && systemctl suspend \
	, notify-send -u low "  " && sleep 0.5 && systemctl poweroff \
	, notify-send -u low "  " && sleep 0.5 && loginctl terminate-session self \
	, notify-send -u low "  " && sleep 0.5 && reboot \
	, notify-send -u low "  " && sleep 0.5 && xset dpms force off \
	, notify-send -u low "  " && sleep 0.5 && xrandr-refresh \
	, notify-send -u low "  " && sleep 0.5 && color-switch \
	, bspc wm -r \
	}

## brightness
XF86MonBrightnessUp
	xbacklight -inc 10
XF86MonBrightnessDown
	xbacklight -dec 10

# bspwm

## close window
super + shift + c
	bspc node -c

## state/flags
### set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,\~pseudo_tiled,\~floating,\~fullscreen}

### alternate between the tiled and monocle layout
super + z
	bspc desktop -l next

## focus/swap

### swap the current node and the biggest window
super + g
	bspc node -s biggest.window.local

### focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

### focus or send to the given desktop
super + {_,shift + }{1-5}
	bspc {desktop -f,node -d} '^{1-5}'
super + 0
	bspc desktop -f Desktop

## move window to next or previous desktop
super + shift + bracket{left,right}
	bspc node -d {prev,next}.local

## focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local.occupied

## focus the next/previous window in the current desktop
super + {n,p}
	bspc node -f {next,prev}.local.!hidden.window

## focus the last node/desktop
super + {6,Tab}
	bspc {node,desktop} -f last

## focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

## move a floating window
super + alt + {h,j,k,l}
	bspc node -v {-40 0,0 40,0 -40,40 0}

# dunst
super + space
	dunstctl close
super + shift + space
	dunstctl close-all
super + grave
	dunstctl history-pop

# screenshot
super + ctrl + s
	flameshot gui
super + shift + s
	flameshot full -c -p ~/Pictures/screenshots

# rofi
super + ctrl + Return
	rofi -show
super + ctrl + bracketleft
	r-proc-kill
super + ctrl + {_,shift + } d
	r-dict {_,-h}
## screen orientation
super + shift + {Up,Down,Left,Right}
	{ r-set-orientation "inverted" \
	, r-set-orientation "normal" \
	, r-set-orientation "left" \
	, r-set-orientation "right" \
	}

