# opening programs
super + shift + Return ; {b, d, q, m, v}
	{ $BROWSER\
	, dropbox\
	, qbittorrent\
	, mailspring\
	, vb-start\
	}

# alacritty
super + Return
	alacritty -e tmux
alt + z
	acty-padding-toggle

## controls (tp)
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle
# brightness
XF86MonBrightnessUp
	xbacklight -inc 10
XF86MonBrightnessDown
	xbacklight -dec 10

# systems
super + shift + Escape ; {k, b, s, S, u, r, o, X, c, w}
	{ pkill -10 sxhkd && notify-send -u low "sxhkd daemon reloaded"\
	, $XDG_CONFIG_HOME/polybar/launch.sh > /dev/null 2>&1 \
	, notify-send -u low "zzz..." && sleep 1 && systemctl suspend\
	, notify-send -u low "  " && sleep 1 && systemctl poweroff\
	, notify-send -u low "  " && sleep 1 && loginctl terminate-session self\
	, notify-send -u low "  " && sleep 1 && reboot\
	, notify-send -u low "  " && sleep 1 && xset dpms force off\
	, xrandr-refresh\
	, notify-send -u low "  " && color-switch\
	, bspc wm -r\
	}

# bspwm

## close window
super + shift + c
	bspc node -c

## state/flags
### set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,\~pseudo_tiled,\~floating,\~fullscreen}

### alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

## focus/swap

### swap the current node and the biggest window
super + g
	bspc node -s biggest.window.local

### focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

### focus or send to the given desktop
super + {_,shift + }{1-5}
	bspc {desktop -f,node -d} '^{1-5}'
super + 0
	bspc desktop -f Desktop

## move window to next or previous desktop
super + shift + bracket{left,right}
	bspc node -d {prev,next}.local

## focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

## focus the next/previous window in the current desktop
super + {n,p}
	bspc node -f {next,prev}.local.!hidden.window

## focus the last node/desktop
super + {6,Tab}
	bspc {node,desktop} -f last

## focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

## move a floating window
super + alt + {h,j,k,l}
	bspc node -v {-40 0,0 40,0 -40,40 0}

# dunst
super + space
	dunstctl close
super + shift + space
	dunstctl close-all
super + grave
	dunstctl history-pop

# screenshot
super + ctrl + s
	flameshot gui
super + shift + s
	flameshot full -c -p ~/Pictures/screenshots

# rofi
super + ctrl + Return
	rofi -show
super + ctrl + bracketleft
	r-proc-kill
super + ctrl + {_,shift + } d
	r-dict {_,-h}
## screen orientation
super + shift + {Up,Down,Left,Right}
	{ r-set-orientation "inverted" \
	, r-set-orientation "normal" \
	, r-set-orientation "left" \
	, r-set-orientation "right" \
	}

