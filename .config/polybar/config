[colors]
red = #ea6962
green = #a9b665
yellow = #d8a657
orange = #e78a4e
blue = #7daea3
purple = #d3869b
aqua = #89b482
gray = #928374
bg = #1d2021
fg = #d4be98
bg-alt = #282828
fg-alt = #928374
primary = ${colors.red}
alert = ${colors.red}

[bar/statusbar]
bottom = true
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 60
radius = 0.0
fixed-center = false
dpi = ${xrdb:Xft.dpi:-1}
separator = |
separator-foreground = ${colors.gray}

background = ${colors.bg}
foreground = ${colors.fg}

line-size = 3

border-size = 0
border-color = ${colors.fg}

padding-left = 0
padding-right = 0

module-margin-left = 2
module-margin-right = 2

font-0 = Hermit:pixelsize=10;4
font-1 = Font Awesome 6 Free Solid:pixelsize=10;2
font-2 = Noto Sans:pixelsize=10;2

modules-left = bspwm
;modules-center = mpd
modules-right = wmnode pkg eth cputemp memory pulseaudio bat date tray

tray-position = right
tray-padding = 4
tray-background =${colors.bg}

cursor-click = pointer
cursor-scroll = ns-resize

wm-restack = bspwm

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.fg-alt}

[module/bspwm]
type = internal/bspwm
label-focused = %name%
label-focused-background = ${colors.bg-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 5
label-occupied = %name%
label-occupied-padding = 3
label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 5
label-empty = %name%
label-empty-foreground = ${colors.fg-alt}
label-empty-padding = 3
; Separator in between workspaces
label-separator = ""
label-separator-padding = 0

[module/pkg]
type = custom/script
exec = poly-pkg-update
interval = 10800
format-foreground = ${colors.gray}
format-prefix = " "

[module/wmnode]
type = custom/script
exec = bsp-node-counter
tail = true
format-foreground = ${colors.primary}

[module/eth]
type = custom/script
exec = poly-bandwidth
interval = 2
format-foreground = ${colors.gray}
; format-underline = ${colors.aqua}

[module/cputemp]
type = custom/script
exec = poly-cputemp
interval = 2
format-prefix = " "
format-underline = ${colors.yellow}

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume>
label-volume =  %percentage%%
label-volume-foreground = ${colors.fg}
label-volume-underline = ${colors.aqua}
label-muted =  muted
label-muted-foreground = ${colors.fg-alt}

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.fg}
format-underline = ${colors.purple}
label = %percentage_used%%

[module/bat]
type =custom/script
exec = poly-bat
tail = true
format-underline = ${colors.orange}

[module/date]
type = internal/date
interval = 1
date = " %Y-%m-%d"
time = %H:%M
time-alt = %H:%M:%S
format-prefix = ""
format-prefix-foreground = ${colors.fg}
format-underline = ${colors.primary}
label = %date% %time%

[module/tray]
type = custom/script
exec = echo ""

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0
