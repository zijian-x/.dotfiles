PATH=${PATH}:$(find $HOME/.scripts -type d | tr '\n' ':' | sed 's/:$//')

export SHELL="/usr/bin/zsh"
export EDITOR="nvim"
export VISUAL="$EDITOR"
export SUDO_EDITOR="$EDITOR"
export TERMINAL="alacritty"
export BROWSER="brave"

export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CACHE_HOME="$HOME/.cache"

export INPUTRC="$XDG_CONFIG_HOME/shell/inputrc"
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"
export HISTFILE="$XDG_DATA_HOME/history"
export LESSHISTFILE="-"

export PASSWORD_STORE_DIR=$XDG_DATA_HOME/password-store
export GNUPGHOME=$XDG_DATA_HOME/gnupg

# fzf
export FZF_DEFAULT_OPTS='--layout=reverse --height=50%'
export FZF_DEFAULT_COMMAND='fd -uu -L -E ".git" -E ".cache" -E ".backup"'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_ALT_C_COMMAND="$FZF_DEFAULT_COMMAND -td"

# nnn
export NNN_FCOLORS="000004020005050009060B00"
export NNN_OPTS="eEHR"

# calibre dark theme
export CALIBRE_USE_DARK_PALETTE=1

# TODO for statistics
find /sys/devices -type f -name "temp*_input" \
	> $HOME/hwmon/test$(($(ls $HOME/hwmon | wc -l) + 1))
