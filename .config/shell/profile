PATH=$PATH:$(find $HOME/.local/bin -type d | tr '\n' ':' | sed 's/:$//')

export SHELL="/usr/bin/zsh"
export EDITOR="nvim"
export VISUAL="$EDITOR"
export SUDO_EDITOR="$EDITOR"
export TERMINAL="alacritty"
export BROWSER="brave"
export LESSHISTFILE="-"

export XDG_CONFIG_HOME=$HOME/.config
export XDG_DATA_HOME=$HOME/.local/share
export XDG_CACHE_HOME=$HOME/.cache

# home clean up
export ZDOTDIR=$XDG_CONFIG_HOME/zsh
export HISTFILE=$XDG_CACHE_HOME/zsh/history
export INPUTRC=$XDG_CONFIG_HOME/shell/inputrc
export PASSWORD_STORE_DIR=$XDG_DATA_HOME/password-store
export GTK2_RC_FILES=$XDG_CONFIG_HOME/gtk-2.0/gtkrc-2.0
export _JAVA_OPTIONS=-Djava.util.prefs.userRoot=$XDG_CONFIG_HOME/java
export XAUTHORITY=$XDG_CONFIG_HOME/X11/Xauthority

# fzf
export ESCDELAY="1"
export FZF_DEFAULT_OPTS='--border=sharp --color=16 --layout=reverse --height=50% --cycle'
export FZF_DEFAULT_COMMAND='fd -L -H'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_ALT_C_COMMAND="$FZF_DEFAULT_COMMAND -td"

# nnn
export NNN_FCOLORS="000004020005050009060B00"
export NNN_OPTS="eER"

# calibre dark theme
export CALIBRE_USE_DARK_PALETTE=1

# java
export _JAVA_AWT_WM_NONREPARENTING=1
export JAVA_HIDPI_SCALE_OPTS="-Dsun.java2d.uiScale=2"
export MAVEN_OPTS="-Dmaven.repo.local=$XDG_DATA_HOME/m2"
# export PATH_TO_FX="/usr/lib/jvm/java-11-openjfx/lib"
# export JAVAFX_OPTS="--module-path $PATH_TO_FX --add-modules=ALL-MODULE-PATH"

# csharp
# export DOTNET_CLI_TELEMETRY_OPTOUT=1

# npm
export NPM_CONFIG_USERCONFIG=$XDG_CONFIG_HOME/npm/config
export NPM_CONFIG_CACHE=$XDG_CACHE_HOME/npm
