Plug 'folke/zen-mode.nvim'
	lua << EOF
	  require("zen-mode").setup {
	  window = {
		backdrop = 1,
		width = 100,
		height = 0.9,
		options = {
		  signcolumn = "yes",
		  number = false,
		},
	  },
	  on_open = function()
		vim.api.nvim_set_keymap('c', 'bd', 'Bclose', {noremap = true})
	  end,
	  on_close = function()
		vim.api.nvim_command('cunmap bd')
	  end,
	  }
	EOF

Plug 'puremourning/vimspector'
	" Debugger remaps
	nnoremap <leader>dd <CMD>call vimspector#Launch()<CR>
	nnoremap <leader>de <CMD>call vimspector#Reset()<CR>
	nnoremap <leader>dtcb :call vimspector#CleanLineBreakpoint()<CR>
	nnoremap <leader>d<space> :call vimspector#Continue()<CR>
	nmap <leader>dl <Plug>VimspectorStepInto
	nmap <leader>dj <Plug>VimspectorStepOver
	nmap <leader>dk <Plug>VimspectorStepOut
	nmap <leader>d^ <Plug>VimspectorRestart
	nmap <leader>drc <Plug>VimspectorRunToCursor
	nmap <leader>dbp <Plug>VimspectorToggleBreakpoint
	nmap <leader>dcbp <Plug>VimspectorToggleConditionalBreakpoint
		" <Plug>VimspectorStop
		" <Plug>VimspectorPause
		" <Plug>VimspectorAddFunctionBreakpoint

Plug 'junegunn/goyo.vim'
	function! s:goyo_enter()
		nnoremap :bd<CR> <CMD>Bclose<CR>
	endfunction
	function! s:goyo_leave()
		unmap :bd<CR>
	endfunction
	autocmd! User GoyoEnter nested call <SID>goyo_enter()
	autocmd! User GoyoLeave nested call <SID>goyo_leave()

	let g:goyo_height = 100
	let g:goyo_width = 100
	let g:goyo_linenr = 1
	nnoremap <leader>z <CMD>Goyo<CR>

Plug 'sakhnik/nvim-gdb', { 'do': ':!./install.sh' }
