#!/usr/bin/env bash

path="$HOME"/tmp/scratch

main()
{
    lang=$(find "$path" -maxdepth 1 -type d -not -path "$path" -print0 |
	xargs -0 -I {} basename {} | fzf)

    [[ -z "$lang" || ! -d "$path/$lang" ]] && exit 1
    cd "$path/$lang" &&
	vim "$(find "$path/$lang" -type f -name "scratch.$lang")"
}

main
