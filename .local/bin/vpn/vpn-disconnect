#!/usr/bin/env bash

if ! systemctl status mullvad-daemon.service > /dev/null 2>&1;
then
    notify-send -u low "mullvad daemon not running" && exit 1
fi

mullvad disconnect

expect <<- DONE
set timeout -1
spawn systemctl stop mullvad-daemon.service
expect "*?assword:*"
send -- "$(pass user-zijian)"
send -- "\r"
expect eof
DONE

if systemctl status mullvad-daemon.service;
then
    notify-send -u low "failed killing daemon"
    exit 1
fi
notify-send -u low "daemon killed" && exit 0
