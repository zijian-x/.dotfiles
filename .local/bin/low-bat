#!/usr/bin/env bash

low_threshold=15

cnt=0
sum=0

for bat_dir in /sys/class/power_supply/BAT?;
do
    (( ++cnt ))
    capacity="$(cat "$bat_dir/capacity")"
    (( sum += capacity ))
done

total=$(( sum / cnt ))
(( total < low_threshold )) && notify-send -u critical "Battery Low" && exit 0

exit 1
