#!/usr/bin/env bash

CONF="wg.conf"
CONF_GPG="$XDG_CONFIG_HOME/wg/$CONF.asc"

[[ ! -f "$CONF_GPG" ]] && echo "Wireguard config file not found." >&2 && exit 127

gpg -d --default-recipient-self -o "/tmp/$CONF" "$CONF_GPG" && sudo wg-quick up "/tmp/$CONF"

[[ $? -eq 0 ]] && notify-send -t 1000 "Wireguard up" &&
    brave 'https://www.ipleak.net' &> /dev/null & disown

rm -f "/tmp/$CONF"
