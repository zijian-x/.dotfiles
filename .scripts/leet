#!/usr/bin/env bash

[[ -z "$*" ]] && exit 1

root_dir="$HOME/code/leetcode"

function make_java()
{
	dir="$root_dir/Java"
	sed -E -i "0,/SRC_DIR/{s/(SRC_DIR := ).*/\1$1/}" "$dir/makefile" &&
		mkdir "$dir/$1" &&
		printf "%s\n\n" "package $1;" > "$dir/$1/Solution.java"
}

function make_cpp()
{
	dir="$root_dir/cpp"
	sed -E -i "0,/SRC_DIR/{s/(SRC_DIR := ).*/\1$1/}" "$dir/makefile" &&
		mkdir "$dir/$1" &&
		printf "%s\n%s\n\n%s\n\n%s\n{\n}" \
		"#include <iostream>" \
		"#include <vector>" \
		"#include \"helper.h\"" \
		"int main(int argc, char** argv)" > "$dir/$1/solution.cpp"
}

case "$1" in
	"-j"|"--java")
		[[ -z "$2" ]] && exit 1
		make_java "$2" && nvim "$root_dir/Java/$2/Solution.java"
		;;
	"-C")
		[[ -z "$2" ]] && exit 1
		make_cpp "$2" && nvim "$root_dir/cpp/$2/solution.cpp"
		;;
	*)
		make_cpp "$1" && nvim "$root_dir/cpp/$1/solution.cpp"
		;;
esac
